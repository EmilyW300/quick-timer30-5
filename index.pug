doctype html
html
  head
    meta(charset="utf-8")
    title Pomodoro Flip Timer
    link(rel="stylesheet",type="text/css",href="index.css")
    script(type="text/javascript",src="index.js")
  body
    .cosmos
      .stars
      .stars.stars-b
      .moon
    .timer-page
      .controls
        button#tomato-btn.control-btn(type="button")
          span.icon ğŸ…
          span.text Start 25-min timer
        button#pause-btn.control-btn(type="button")
          span.icon ğŸ…
          span.text Pause
        button#reset-btn.control-btn(type="button")
          span.icon ğŸ…
          span.text Reset
        button#minus-3-btn.control-btn(type="button")
          span.icon ğŸ…
          span.text -3 min
        button#minus-5-btn.control-btn(type="button")
          span.icon ğŸ…
          span.text -5 min
        button#minus-10-btn.control-btn(type="button")
          span.icon ğŸ…
          span.text -10 min
      .clock(role="timer", aria-live="polite")
        .flip-card(data-slot="m-ten", data-value="2")
          span.top 2
          span.bottom 2
          span.flip-top 2
          span.flip-bottom 2
        .flip-card(data-slot="m-one", data-value="5")
          span.top 5
          span.bottom 5
          span.flip-top 5
          span.flip-bottom 5
        .colon :
        .flip-card(data-slot="s-ten", data-value="0")
          span.top 0
          span.bottom 0
          span.flip-top 0
          span.flip-bottom 0
        .flip-card(data-slot="s-one", data-value="0")
          span.top 0
          span.bottom 0
          span.flip-top 0
          span.flip-bottom 0
      .pause-meter(role="status", aria-live="polite")
        .meter-icon(aria-hidden="true")
          span.icon
            | ğŸ…
            span.icon-count#pause-count-icon 0
        .meter-text
          .meter-label Pause count
          .meter-number#pause-count 0
